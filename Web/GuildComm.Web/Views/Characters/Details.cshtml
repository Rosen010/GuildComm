@using GuildComm.Web.ViewModels.Characters
@model CharacterDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Character Details</h1>
<hr class="hr-2">
<div class="mx-auto">
    <div class="d-flex">
        <h3 class="text-white">Name: @Model.Name</h3>
    </div>
    <hr class="hr-2">
    <div class="d-flex">
        <h4 class="text-white">Class: @Model.Class</h4>
    </div>
    <div class="mt-4">
        <h4 class="text-white">Level: @Model.Level</h4>
    </div>
    <div class="mt-4">
        <h4 class="text-white">ItemLevel: @Model.ItemLevel</h4>
    </div>
    <div class="mt-4">
        <h4 class="text-white">Role: @Model.Role</h4>
    </div>
    <div class="mt-4">
        <h4 class="text-white">Guild: @Model.GuildName</h4>
    </div>
    <div class="mt-4">
        <a class="btn btn-outline-light" href="/Users/Details">Back</a>
    </div>
</div>
