@using GuildComm.Web.Models.Account

@model UserLoginInputModel

<div class="text-center">
    <h1 class="display-4 text-white font-weight-bold embiggen">Log In</h1>
    <hr />
    <div class="row d-flex justify-content-center mt-2">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2 mb-3">
                    <label asp-for="Email" class="control-label text-white mb-3"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 mb-3">
                    <label asp-for="Password" class="control-label text-white mb-3"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check mt-2 mb-3">
                    <label class="control-label text-white mb-3">
                        <input asp-for="RememberMe" class="form-check-input" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Log In" class="btn btn-secondary mt-3" />
                </div>
            </form>
        </div>
    </div>
</div>