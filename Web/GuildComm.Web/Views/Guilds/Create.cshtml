@using GuildComm.Web.ViewModels
@model GuildCreateInputModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 d-flex justify-content-center">
        <form method="post">
            <h2 class="text-white">Register a new Guild</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="text-white"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Information" class="text-white"></label>
                <textarea asp-for="@Model.Information" class="form-control"></textarea>
                <span asp-validation-for="@Model.Information" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RealmName" class="text-white"></label>
                <select class="custom-select" id="realmName" name="realmName">
                    <option selected disabled>-- Choose Realm --</option>

                    @foreach (var realm in Model.Realms)
                    {
                        <option value="@realm.Name">@realm.Name - @realm.Region (@realm.Type)</option>
                    }

                </select>
                <span asp-validation-for="@Model.RealmName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MasterCharacter" class="text-white"></label>
                <select class="custom-select" id="masterCharacter" name="masterCharacter">
                    <option selected disabled>-- Choose Realm --</option>

                    @foreach (var character in Model.Characters)
                    {
                        <option value="@character.Name">@character.Name - @character.RealmName</option>
                    }

                </select>
                <span asp-validation-for="@Model.MasterCharacter" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark">Register Guild</button>
        </form>
    </div>
</div>

