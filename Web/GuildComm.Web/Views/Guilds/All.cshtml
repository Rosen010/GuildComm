@using GuildComm.Web.ViewModels
@model List<GuildsAllViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Realm</th>
            <th scope="col">Members</th>
        </tr>
    </thead>
    <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                <th scope="row">@i</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Realm.Name</td>
                <td>@Model[i].MembersCount</td>
                 </tr>
            }
    </tbody>
</table>