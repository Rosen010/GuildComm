@using GuildComm.Web.Models.Guild

@model GuildViewModel

<div class="card">
    <img src="~/Images/horde-banner.png" class="card-img-top" alt="horde-banner">
    <div class="card-body bg-dark text-white">
        <h5 class="card-title">@Model.Name - @Model.Realm</h5>
        <p class="card-text">This is dummy text for the guild description</p>
        <p class="card-text">Members: @Model.MembersCount</p>
        <p class="card-text"><small class="text-white">Last updated 3 mins ago</small></p>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Class</th>
                <th scope="col">Rank</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.Name</td>
                    <td>@member.Class</td>
                    <td>@member.Rank</td>
                </tr>
            }
        </tbody>
    </table>
</div>