@using GuildComm.Web.ViewModels.Users
@model GuildCommUserDescriptionUpdateInputModel

@{
    ViewData["Title"] = "UpdateDescription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12 justify-content-center">
            <form method="post">
                <h2>Update Description</h2>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <textarea asp-for="@Model.Description" class="form-control z-depth-1" rows="4" placeholder="Write description here..."></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>           
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

