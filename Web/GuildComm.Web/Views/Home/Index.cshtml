@using GuildComm.Web.Models.Search

@model SearchInputModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (this.User.Identity.IsAuthenticated)
    {
        <h1 class="display-4 text-white">Welcome @this.User.Identity.Name</h1>
        <p class="text-white">Have fun with your guildies!</p>
    }
    else
    {
        <div class="mt-5">
            <h1 class="display-4 text-white font-weight-bold embiggen">Welcome</h1>
            <p class="text-white font-weight-bolder"><a href="/Identity/Account/Login" class="deco-none">Login</a> or <a href="/Identity/Account/Register" class="deco-none">Register</a> to meet your new guildies!</p>
        </div>
    }

    <div class="row d-flex justify-content-center mt-2">
        <div class="col-lg-6">
            <form method="get" asp-controller="Search" asp-action="FindGuild">
                <h2 class="text-white">Search</h2>
                <div class="form-group mt-2 mb-3">
                    <label asp-for="@Model.Realm" class="text-white mb-3"></label>
                    <input type="text" asp-for="@Model.Realm" class="form-control" />
                </div>
                <div class="form-group mt-2 mb-3">
                    <label asp-for="@Model.GuildName" class="text-white mb-3"></label>
                    <input type="text" asp-for="@Model.GuildName" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mt-3">Search</button>
            </form>
        </div>
    </div>
    <hr />
